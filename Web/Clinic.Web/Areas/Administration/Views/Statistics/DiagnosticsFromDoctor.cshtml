﻿@using Clinic.Web.ViewModels.Administration.Statistics;

@model ICollection<StatisticDiagnosticViewModel>

<main class="mt-3">
    @if(Model.Count <= 0)
    {
        <h1 class="text-center suls-text-color">There are no diagnostics from this doctor</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current diagnostics from @Model.First().CreatorName</h1>
        @foreach (StatisticDiagnosticViewModel diagnostic in Model)
        {
            <div>
                <h2>@diagnostic.Name</h2>
                <p>@diagnostic.Description</p>
            </div>
        }
    }

</main>