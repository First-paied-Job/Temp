﻿@using Clinic.Web.ViewModels.Administration.Statistics;

@model ICollection<StatisticPatientViewModel>

<main class="mt-3">
    @if (Model.Count <= 0)
    {
        <h1 class="text-center suls-text-color">There are no patients with diagnostics at the moment</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current patients with diagnostics</h1>
        @foreach (StatisticPatientViewModel patient in Model)
        {
            <div>
                <h2>@patient.PatientEmail</h2>
                <div>
                    <a href="/Administration/Statistics/DiagnosticsForPatient?patientId=@patient.PatientId" class="btn forum-go-back-btn text-uppercase">See all diagnostics for @patient.PatientEmail</a>
                </div>
            </div>
        }
    }
</main>