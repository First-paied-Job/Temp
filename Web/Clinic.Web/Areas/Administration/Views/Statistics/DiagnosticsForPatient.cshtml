﻿@using Clinic.Web.ViewModels.Administration.Statistics;

@model ICollection<StatisticDiagnosticPatientViewModel>

<main class="mt-3">
    @if(Model.Count <= 0)
    {
        <h1 class="text-center suls-text-color">There are no diagnostics for this patient</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current diagnostics for @Model.First().PatientName</h1>
        @foreach (StatisticDiagnosticPatientViewModel diagnostic in Model)
        {
            <div>
                <h2>@diagnostic.Name</h2>
                <p>@diagnostic.Description</p>
            </div>
        }
    }

</main>