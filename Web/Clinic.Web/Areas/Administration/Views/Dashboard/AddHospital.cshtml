﻿@using Clinic.Web.ViewModels.Administration.Dashboard.Hospital;

@model HospitalInputModel

@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <p class="error-message">@error.ErrorMessage</p>
    }
}

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Here you can add a Hospital!</h1>
        </div>

        <form class="mx-auto half-width col-5" method="post" asp-controller="Dashboard" asp-action="AddHospital">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Name" class="suls-text-color">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="top-border-line primary-separator"></div>

            <button class="btn btn-common" id="submit" type="submit">Add Hospital</button>
        </form>
    </div>
</div>