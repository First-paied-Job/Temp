﻿@using Clinic.Web.ViewModels.Administration.Dashboard.Clinic;

@model ICollection<ClinicViewModel>

<main class="mt-3">
    @if (Model.Count == 0)
    {
        <h1 class="text-center suls-text-color">There are no clinics at the moment!</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current Clinics</h1>
        @foreach (ClinicViewModel clinic in Model)
        {
            <div>
                <p>Clinic Name - @clinic.Name</p>
                @if (clinic.Doctors.Count > 0)
                {
                    <div>
                        <h3>Doctors in this clinic: </h3>
                        @foreach (DoctorDTO doctor in clinic.Doctors)
                        {
                            <p>@doctor.Name</p>
                            <div class="submit-button ">
                                <a href="/Administration/Dashboard/RemoveDoctorFromClinic?doctorId=@doctor.DoctorId">
                                    <button class="btn btn-common" id="submit" type="submit">Remove @doctor.Name from this clinic</button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </a>
                            </div>
                        }
                    </div>
                }
                <div class="submit-button ">
                    <a href="/Administration/Dashboard/AddDoctorToClinic?clinicId=@clinic.ClinicId">
                        <button class="btn btn-common" id="submit" type="submit">Add a doctor to @clinic.Name</button>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </a>
                </div>

                <div class="submit-button ">
                    <a href="/Administration/Dashboard/RemoveClinic?clinicId=@clinic.ClinicId">
                        <button class="btn btn-common" id="submit" type="submit">Remove Clinic</button>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </a>
                </div>

                <div class="submit-button ">
                    <a href="/Administration/Dashboard/EditClinic?clinicId=@clinic.ClinicId">
                        <button class="btn btn-common" id="submit" type="submit">Edit Clinicc</button>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </a>
                </div>
            </div>
        }
    }
    
</main>