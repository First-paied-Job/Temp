﻿@using Clinic.Web.ViewModels.Doctor.Dashboard.Diagnostics;

@model DiagnosticInputModel

@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <p class="error-message">@error.ErrorMessage</p>
    }
}

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Here you can add a diagnostic!</h1>
        </div>

        <form class="mx-auto half-width col-5" method="post" asp-controller="Dashboard" asp-action="AddDiagnosticToClinic">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Name" class="suls-text-color">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="suls-text-color">Description</label>
                <textarea asp-for="Description" class="form-control" cols="30" rows="5" placeholder="Description..."> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @if (ViewBag.clinicId != null)
            {
                <input asp-for="ClinicId" class="hide" hidden="hidden" value="@ViewBag.clinicId">
            }
            else
            {
                <input asp-for="ClinicId" class="hide" hidden="hidden" value="@Model.ClinicId">
            }

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Add diagnostic</button>
        </form>
    </div>
</div>