﻿@using Clinic.Web.ViewModels.Doctor.Dashboard.Diagnostics;

@model ICollection<DiagnosticViewModel>

<main class="mt-3">
    <h1 class="text-center suls-text-color">Available diagnostics</h1>
    @if (Model.Count < 0)
    {
        <div>
            <p>There are available diagnostics currently.</p>
        </div>
    }
    else
    {
        @foreach (DiagnosticViewModel diagnostic in Model)
        {
            <div>
                <p>@diagnostic.Name</p>
                <p>@diagnostic.Description</p>
                <div>
                    @Html.ActionLink("Add diagnostic to patient", "AddDiagnosticToPatient", "Dashboard", new AddDiagnosticToPatientInput { PatientId = ViewBag.patientId, DiagnosticId = diagnostic.DiagnosticId, ClinicId = ViewBag.clinicId })
                </div>
            </div>
        }
    }
    <script type="text/javascript">
        $(function () {
            $("#submit").click(function () {
                document.forms[0].submit();
                return false;
            });
        });
    </script>
</main>