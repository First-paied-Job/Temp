﻿@using Clinic.Web.ViewModels.Doctor.Dashboard.Diagnostics;

@model DiagnosticEditViewModel

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="bg-contact2">
            <div class="container-contact2">
                <div class="wrap-contact2">
                    <form class="contact2-form validate-form" asp-asp-area="Doctor" asp-controller="Dashboard" asp-action="EditDiagnosticPost">
                        <span class="contact2-form-title">
                            Edit diagnostic
                        </span>

                        <div class="wrap-input2 validate-input" data-validate="Name is required">
                            <label asp-for="Name" style="color: black;"></label>
                            <input asp-for="Name" class="input2" value="@Model.Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="suls-text-color">Description</label>
                            <textarea asp-for="Description" class="form-control" cols="30" rows="5" placeholder="Description...">@Model.Description</textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <input asp-for="DiagnosticId" class="hide" hidden="hidden" value="@Model.DiagnosticId">

                        <div class="container-contact2-form-btn">
                            <div class="wrap-contact2-form-btn">
                                <div class="contact2-form-bgbtn"></div>
                                <button type="submit" class="contact2-form-btn">EDIT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>