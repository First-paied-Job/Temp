﻿@using Clinic.Web.ViewModels.Patient.Dashboard;

@model ICollection<DiagnosticPatientView>

<main class="mt-3">
    <h1 class="text-center suls-text-color">Current diagnostics prescribed for you</h1>
    @if (Model.Count <= 0)
    {
        <div>
            <p>There are no diagnostics prescribed for you currently!</p>
        </div>
    }
    else
    {
        @foreach (DiagnosticPatientView diagnostic in Model)
        {
            <div>
                <p>@diagnostic.Name</p>
                <p>@diagnostic.Description</p>
                <p>This diagnostic was prescribed to you by @diagnostic.NameOfDoctor</p>
            </div>
        }
    }

</main>