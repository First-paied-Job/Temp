﻿@using Clinic.Web.ViewModels.Patient.Dashboard;

@model ICollection<ClinicPatientView>

﻿<div class="row">
    <div class="jumbotron col-md-12">
        @if (Model.Count <= 0)
        {
            <div>
                <p>You are not in any clinics right now.</p>
            </div>
        }
        else
        {
            @foreach (var clinic in Model)
            {
                <div>
                    <p>@clinic.Name</p>
                    <div class="submit-button ">
                        <a href="/Patient/Dashboard/DiagnosticsForPatient?clinicId=@clinic.ClinicId">
                            <button class="btn btn-common" id="submit" type="submit">See your diagnostics in @clinic.Name</button>
                            <div id="msgSubmit" class="h3 text-center hidden"></div>
                            <div class="clearfix"></div>
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>
